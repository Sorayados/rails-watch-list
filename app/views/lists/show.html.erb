<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_path "cinema.jpg" %>');">
  <div class="container">
    <h2><%= @list.name %></h2>
  </div>
</div>
<div class=container>
  <div class="row mt-5">
    <% @list.movies.each do |movie| %>
      <div class="col-4">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(' <%= movie.poster_url %>')">
          <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
          <%= movie.title %>
          <%= link_to "X", bookmark_path(bookmark),
          data: {turbo_method: 'delete', turbo_confirm: "Are you sure?"}, class: "card-remove-link"
          %>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-primary"%>
  <%= link_to "All lists", root_path, class: "btn btn-primary" %>
</div>
