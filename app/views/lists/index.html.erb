<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_path "cinema.jpg"%>');">
  <div class="container">
    <h2>Lists</h2>
  </div>
</div>
<div class=container>
  <div class="row mt-5">
    <% @lists.each do |list| %>
      <div class="col-4">
      <% if list.photo.attached? %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_tag list.photo.key, height: 300, width: 400, crop: :fill %>')">
          <%= link_to list.name, list %>
        </div>
      <% else %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))">
          <%= link_to list.name, list %>
          <%= link_to "X", list_path(list),
          data: {turbo_method: 'delete', turbo_confirm: "Are you sure?"}, class: "card-remove-link" %>
        </div>
      <% end %>
      </div>
    <% end %>
  </div>
  <%= link_to "Create a new list", new_list_path, class: "btn btn-primary" %>
</div>
