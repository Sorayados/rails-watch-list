<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_path "cinema.jpg"%>');">
  <div class="container">
    <h2>Lists</h2>
  </div>
</div>
<div class=container>
  <div class="row mt-5">
    <% @lists.each do |list| %>
      <div class="col-4">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('cinema.jpg')">
          <%= link_to list.name, list %>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to "Create a new list", new_list_path, class: "btn btn-primary" %>
</div>
